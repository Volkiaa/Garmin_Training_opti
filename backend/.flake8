[flake8]
max-line-length = 88
extend-ignore =
    E203,
    W503,
    F401,
    E722
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    alembic,
    .eggs,
    *.egg

# E203: whitespace before ':' (conflicts with black)
# W503: line break before binary operator (conflicts with black)
# F401: imported but unused (TODO: fix these properly)
# E722: bare except (TODO: fix these properly)
