[flake8]
max-line-length = 140
extend-ignore =
    E203,
    W503,
    F401,
    F541,
    F841,
    E402,
    E722
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    alembic,
    .eggs,
    *.egg

# E203: whitespace before ':' (conflicts with black)
# W503: line break before binary operator (conflicts with black)
# F401: imported but unused (TODO: fix these properly)
# F541: f-string missing placeholders (TODO: fix these properly)
# F841: local variable assigned but never used (TODO: fix these properly)
# E402: module level import not at top of file (TODO: fix these properly)
# E722: bare except (TODO: fix these properly)
